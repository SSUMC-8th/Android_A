<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeRecyclerviewFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imv_albumCover_home_recycler"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/album_lady"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_songName_home_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lady"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/imv_albumCover_home_recycler"
        app:layout_constraintStart_toStartOf="@id/imv_albumCover_home_recycler"/>

    <TextView
        android:id="@+id/tv_artistName_home_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kenshi Yonezu"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_songName_home_recycler"
        app:layout_constraintStart_toStartOf="@id/imv_albumCover_home_recycler"/>

</androidx.constraintlayout.widget.ConstraintLayout>
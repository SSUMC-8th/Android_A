<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AlbumFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/btn_arrowBck_albumFragment"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/arrowback"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btn_more_albumFragment"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/more"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btn_favorite_albumFragment"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/favorite"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@id/btn_more_albumFragment"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_albumName_albumFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범 이름"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_arrowBck_albumFragment"
        />

    <TextView
        android:id="@+id/tv_artistName_albumFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아티스트 이름"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_albumName_albumFragment"
        />

    <TextView
        android:id="@+id/tv_albumInformation_albumFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범정보"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_artistName_albumFragment"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imv_albumCover_albumFragment"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_albumInformation_albumFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/album_lady"
        app:shapeAppearanceOverlay="@style/ImageRoundCorner"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbl_ablumInformation_albumFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/imv_albumCover_albumFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="수록곡"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="상세정보"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="영상"/>

    </com.google.android.material.tabs.TabLayout>


</androidx.constraintlayout.widget.ConstraintLayout>